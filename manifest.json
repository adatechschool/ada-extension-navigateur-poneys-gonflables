{
    "manifest_version": 3,
    "name": "DefineAssistant",
    "version": "0.1",
    "description": "Recherche de d√©finitions",
    "action": {},
    "permissions": [
        "activeTab",
        "contextMenus",
        "storage",
        "scripting"
    ],
    "host-premissions": [
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "mergev1.js",
                "get.js",
                "sprite.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "Spritsheet/perso1.PNG",
                "Spritsheet/perso2.PNG",
                "Spritsheet/perso3.PNG",
                "Spritsheet/perso4.PNG"
            ]
        }
    ]
}